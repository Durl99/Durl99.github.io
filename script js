document.getElementById('iniciar-prueba').addEventListener('click', iniciarPrueba);

function iniciarPrueba() {
    const velocidadDescarga = document.getElementById('velocidad-descarga');
    const velocidadSubida = document.getElementById('velocidad-subida');
    const ping = document.getElementById('ping');

    // Iniciar la prueba de velocidad...
    // (Implementar la l√≥gica para medir la velocidad de descarga, subida y latencia)

    // Mostrar los resultados
    velocidadDescarga.textContent = '10 Mbps'; // Ejemplo de resultado
    velocidadSubida.textContent = '5 Mbps'; // Ejemplo de resultado
    ping.textContent = '50 ms'; // Ejemplo de resultado
}
